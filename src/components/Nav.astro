---
import Container from "@layouts/Container.astro";

const { title } = Astro.props;
---

<Container>
  <div class="flex justify-between">
    <div class="flex flex-col gap-0.5">
      <h2 class="font-bold text-xl">Eber Alejo</h2>
      <p class="font-light text-sm">@ch3ber</p>
    </div>
    <div class="flex flex-col gap-0.5">
      <a
        href="http://github.com/ch3ber"
        class="bg-zinc-950 p-2 rounded-xl shadow-zinc-950/35 shadow-lg hover:shadow-none transition-shadow"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 24 24"
          fill="none"
          stroke="#fff"
          stroke-linecap="round"
          stroke-linejoin="round"
          width="32"
          height="32"
          stroke-width="1.5"
        >
          <title>GitHub</title>
          <path
            d="M9 19c-4.3 1.4 -4.3 -2.5 -6 -3m12 5v-3.5c0 -1 .1 -1.4 -.5 -2c2.8 -.3 5.5 -1.4 5.5 -6a4.6 4.6 0 0 0 -1.3 -3.2a4.2 4.2 0 0 0 -.1 -3.2s-1.1 -.3 -3.5 1.3a12.3 12.3 0 0 0 -6.2 0c-2.4 -1.6 -3.5 -1.3 -3.5 -1.3a4.2 4.2 0 0 0 -.1 3.2a4.6 4.6 0 0 0 -1.3 3.2c0 4.6 2.7 5.7 5.5 6c-.6 .6 -.6 1.2 -.5 2v3.5"
          ></path>
        </svg>
      </a>
    </div>
  </div>
</Container>

<h1 class="mt-16 font-bold text-4xl text-center">{title}</h1>
<nav class="mt-6 mx-auto">
  <ul class="flex justify-center gap-10 p-4">
    <li>
      <a
        class="bg-white text-zinc-600 px-4 py-2 font-extralight text-xs rounded-md flex flex-col items-center shadow-md shadow-zinc-400/30 hover:shadow-none transition-shadow"
        href="/"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 24 24"
          fill="none"
          stroke="#000"
          stroke-linecap="round"
          stroke-linejoin="round"
          width="24"
          height="24"
          stroke-width="1.5"
        >
          <path d="M5 12l-2 0l9 -9l9 9l-2 0"></path>
          <path d="M5 12v7a2 2 0 0 0 2 2h10a2 2 0 0 0 2 -2v-7"></path>
          <path d="M9 21v-6a2 2 0 0 1 2 -2h2a2 2 0 0 1 2 2v6"></path>
        </svg>
        Inicio
      </a>
    </li>
    <li>
      <a
        class="bg-white text-zinc-600 px-4 py-2 font-extralight text-xs rounded-md flex flex-col items-center shadow-md shadow-zinc-400/30 hover:shadow-none transition-shadow"
        href="/parciales"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 24 24"
          fill="none"
          stroke="#000"
          stroke-linecap="round"
          stroke-linejoin="round"
          width="24"
          height="24"
          stroke-width="1.5"
        >
          <path
            d="M10 19h-6a1 1 0 0 1 -1 -1v-14a1 1 0 0 1 1 -1h6a2 2 0 0 1 2 2a2 2 0 0 1 2 -2h6a1 1 0 0 1 1 1v14a1 1 0 0 1 -1 1h-6a2 2 0 0 0 -2 2a2 2 0 0 0 -2 -2z"
          ></path>
          <path d="M12 5v16"></path>
          <path d="M7 7h1"></path>
          <path d="M7 11h1"></path>
          <path d="M16 7h1"></path>
          <path d="M16 11h1"></path>
          <path d="M16 15h1"></path>
        </svg>
        Parciales
      </a>
    </li>
    <li>
      <a
        class="bg-white text-zinc-600 px-4 py-2 font-extralight text-xs rounded-md flex flex-col items-center shadow-md shadow-zinc-400/30 hover:shadow-none transition-shadow"
        href="/acercade"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 24 24"
          fill="none"
          stroke="#000"
          stroke-linecap="round"
          stroke-linejoin="round"
          width="24"
          height="24"
          stroke-width="1.5"
        >
          <path d="M12 9h.01"></path>
          <path d="M11 12h1v4h1"></path>
          <path d="M12 3c7.2 0 9 1.8 9 9s-1.8 9 -9 9s-9 -1.8 -9 -9s1.8 -9 9 -9z"
          ></path>
        </svg>
        Acerca de
      </a>
    </li>
  </ul>
</nav>
